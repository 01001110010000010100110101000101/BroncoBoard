<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="edu.csupomona.cs480.data.User" table="users" catalog="broncoboard">
        <id name="no" type="int">
            <column name="USER_NO" />
            <generator class="identity" />
        </id>
        <property name="id" type="string">
            <column name="USER_ID" length="60" not-null="true" unique="false" />
        </property>
        <property name="name" type="string">
            <column name="USER_NAME" length="45" not-null="true" unique="false" />
        </property>
        <property name="major" type="string">
            <column name="USER_MAJOR" length="20" not-null="true" unique="false" />
        </property>
    </class>
</hibernate-mapping>